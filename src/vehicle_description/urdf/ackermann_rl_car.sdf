<?xml version="1.0"?>
<sdf version="1.9">
  <model name="ackermann_rl_car">

    <!-- Chassis -->
    <link name="chassis">
      <pose>0 0 0.18 0 0 0</pose>

      <inertial>
        <mass>18.0</mass>
        <inertia>
          <ixx>1.8</ixx>
          <iyy>1.8</iyy>
          <izz>1.8</izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry>
          <box>
            <size>1.2 0.6 0.24</size>
          </box>
        </geometry>
      </collision>

      <visual name="visual">
        <geometry>
          <box>
            <size>1.2 0.6 0.24</size>
          </box>
        </geometry>
        <material>
          <ambient>0.2 0.8 0.2 1.0</ambient>
          <diffuse>0.2 0.8 0.2 1.0</diffuse>
        </material>
      </visual>

      <!-- Camera Sensor (Imported from 4-wheel) -->
      <sensor name='front_camera' type='camera'>
        <pose>0.7 0 0.2 0 0 0</pose> <!-- Outside front face of chassis -->
        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image>
            <width>84</width>
            <height>84</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.02</near>
            <far>100</far>
          </clip>
        </camera>
        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>
        <topic>/camera/image_raw</topic>
      </sensor>
    </link>

    <!-- LiDAR Sensor -->
    <link name="lidar_link">
      <pose relative_to="chassis">0 0 0.4 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.001</ixx>
          <iyy>0.001</iyy>
          <izz>0.001</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.07</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.0 0.0 0.0 1.0</ambient>
          <diffuse>0.0 0.0 0.0 1.0</diffuse>
        </material>
      </visual>
      <sensor name="lidar" type="gpu_lidar">
        <topic>/scan</topic>
        <update_rate>10</update_rate>
        <lidar>
          <scan>
            <horizontal>
              <samples>360</samples>
              <resolution>1</resolution>
              <min_angle>-3.14159</min_angle>
              <max_angle>3.14159</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.1</min>
            <max>10.0</max>
            <resolution>0.01</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </lidar>
        <always_on>1</always_on>
        <visualize>true</visualize>
      </sensor>
    </link>
    <joint name="lidar_joint" type="fixed">
      <parent>chassis</parent>
      <child>lidar_link</child>
    </joint>

    <!-- Front Left Steering Hub -->
    <link name="front_left_steering_hub">
      <pose relative_to="chassis">0.36 0.3 0 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.01</ixx>
          <iyy>0.01</iyy>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

    <joint name="front_left_steering_joint" type="revolute">
      <parent>chassis</parent>
      <child>front_left_steering_hub</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-0.7</lower>
          <upper>0.7</upper>
          <effort>10000</effort>
        </limit>
      </axis>
    </joint>

    <!-- Front Right Steering Hub -->
    <link name="front_right_steering_hub">
      <pose relative_to="chassis">0.36 -0.3 0 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.01</ixx>
          <iyy>0.01</iyy>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

    <joint name="front_right_steering_joint" type="revolute">
      <parent>chassis</parent>
      <child>front_right_steering_hub</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-0.7</lower>
          <upper>0.7</upper>
          <effort>10000</effort>
        </limit>
      </axis>
    </joint>

    <!-- Front Left Wheel -->
    <link name="front_left_wheel">
      <pose relative_to="front_left_steering_hub">0 0 0 -1.5708 0 0</pose>

      <inertial>
        <mass>2.0</mass>
        <inertia>
          <ixx>0.05</ixx>
          <iyy>0.05</iyy>
          <izz>0.05</izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.09</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.09</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1.0</ambient>
          <diffuse>0.1 0.1 0.1 1.0</diffuse>
        </material>
      </visual>
    </link>

    <joint name="front_left_wheel_joint" type="revolute">
      <parent>front_left_steering_hub</parent>
      <child>front_left_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <!-- Front Right Wheel -->
    <link name="front_right_wheel">
      <pose relative_to="front_right_steering_hub">0 0 0 -1.5708 0 0</pose>

      <inertial>
        <mass>2.0</mass>
        <inertia>
          <ixx>0.05</ixx>
          <iyy>0.05</iyy>
          <izz>0.05</izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.09</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.09</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1.0</ambient>
          <diffuse>0.1 0.1 0.1 1.0</diffuse>
        </material>
      </visual>
    </link>

    <joint name="front_right_wheel_joint" type="revolute">
      <parent>front_right_steering_hub</parent>
      <child>front_right_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <!-- Rear Left Wheel -->
    <link name="rear_left_wheel">
      <pose relative_to="chassis">-0.36 0.3 0 -1.5708 0 0</pose>

      <inertial>
        <mass>2.0</mass>
        <inertia>
          <ixx>0.05</ixx>
          <iyy>0.05</iyy>
          <izz>0.05</izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.09</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.09</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1.0</ambient>
          <diffuse>0.1 0.1 0.1 1.0</diffuse>
        </material>
      </visual>
    </link>

    <joint name="rear_left_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>rear_left_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <!-- Rear Right Wheel -->
    <link name="rear_right_wheel">
      <pose relative_to="chassis">-0.36 -0.3 0 -1.5708 0 0</pose>

      <inertial>
        <mass>2.0</mass>
        <inertia>
          <ixx>0.05</ixx>
          <iyy>0.05</iyy>
          <izz>0.05</izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.09</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.09</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1.0</ambient>
          <diffuse>0.1 0.1 0.1 1.0</diffuse>
        </material>
      </visual>
    </link>

    <joint name="rear_right_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>rear_right_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <!-- Sensors System (Required for Camera & LiDAR) -->
    <plugin filename="gz-sim-sensors-system"
      name="gz::sim::systems::Sensors">
    </plugin>

    <!-- Ackermann Steering Plugin -->
    <plugin
      filename="gz-sim-ackermann-steering-system"
      name="gz::sim::systems::AckermannSteering">
      <left_joint>rear_left_wheel_joint</left_joint>
      <right_joint>rear_right_wheel_joint</right_joint>
      <left_steering_joint>front_left_steering_joint</left_steering_joint>
      <right_steering_joint>front_right_steering_joint</right_steering_joint>
      <wheel_base>0.72</wheel_base>
      <wheel_separation>0.6</wheel_separation>
      <steering_limit>0.7</steering_limit>
      <wheel_radius>0.15</wheel_radius>
      <min_velocity>-2.0</min_velocity>
      <max_velocity>2.0</max_velocity>
      <min_acceleration>-2.0</min_acceleration>
      <max_acceleration>2.0</max_acceleration>
      <topic>/cmd_vel</topic>
      <odom_topic>/odom</odom_topic>
      <odom_publish_frequency>50</odom_publish_frequency>
    </plugin>

  </model>
</sdf>
