<?xml version="1.0"?>
<sdf version="1.9">
  <model name="ackermann_car">

    <!-- Chassis -->
    <link name="chassis">
      <pose>0 0 0.3 0 0 0</pose>

      <inertial>
        <mass>50.0</mass>
        <inertia>
          <ixx>5.0</ixx>
          <iyy>5.0</iyy>
          <izz>5.0</izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry>
          <box>
            <size>2.0 1.0 0.4</size>
          </box>
        </geometry>
      </collision>

      <visual name="visual">
        <geometry>
          <box>
            <size>2.0 1.0 0.4</size>
          </box>
        </geometry>
        <material>
          <ambient>0.2 0.4 0.8 1.0</ambient>
          <diffuse>0.2 0.4 0.8 1.0</diffuse>
        </material>
      </visual>
    </link>

    <!-- Front Camera -->
    <link name="camera_link">
      <pose relative_to="chassis">1.0 0 0.3 0 0 0</pose>

      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.001</ixx>
          <iyy>0.001</iyy>
          <izz>0.001</izz>
        </inertia>
      </inertial>

      <visual name="visual">
        <geometry>
          <box>
            <size>0.05 0.05 0.05</size>
          </box>
        </geometry>
        <material>
          <ambient>1.0 0.0 0.0 1.0</ambient>
          <diffuse>1.0 0.0 0.0 1.0</diffuse>
        </material>
      </visual>

      <sensor name="camera" type="camera">
        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
        </camera>
        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>
        <topic>/camera/image_raw</topic>
      </sensor>
    </link>

    <joint name="camera_joint" type="fixed">
      <parent>chassis</parent>
      <child>camera_link</child>
    </joint>

    <!-- Front Left Steering Hub -->
    <link name="front_left_steering_hub">
      <pose relative_to="chassis">0.6 0.5 0 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.01</ixx>
          <iyy>0.01</iyy>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

    <joint name="front_left_steering_joint" type="revolute">
      <parent>chassis</parent>
      <child>front_left_steering_hub</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-0.7</lower>
          <upper>0.7</upper>
        </limit>
      </axis>
    </joint>

    <!-- Front Right Steering Hub -->
    <link name="front_right_steering_hub">
      <pose relative_to="chassis">0.6 -0.5 0 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.01</ixx>
          <iyy>0.01</iyy>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

    <joint name="front_right_steering_joint" type="revolute">
      <parent>chassis</parent>
      <child>front_right_steering_hub</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-0.7</lower>
          <upper>0.7</upper>
        </limit>
      </axis>
    </joint>

    <!-- Front Left Wheel -->
    <link name="front_left_wheel">
      <pose relative_to="front_left_steering_hub">0 0 0 -1.5708 0 0</pose>

      <inertial>
        <mass>2.0</mass>
        <inertia>
          <ixx>0.05</ixx>
          <iyy>0.05</iyy>
          <izz>0.05</izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.25</radius>
            <length>0.15</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.25</radius>
            <length>0.15</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1.0</ambient>
          <diffuse>0.1 0.1 0.1 1.0</diffuse>
        </material>
      </visual>
    </link>

    <joint name="front_left_wheel_joint" type="revolute">
      <parent>front_left_steering_hub</parent>
      <child>front_left_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <!-- Front Right Wheel -->
    <link name="front_right_wheel">
      <pose relative_to="front_right_steering_hub">0 0 0 -1.5708 0 0</pose>

      <inertial>
        <mass>2.0</mass>
        <inertia>
          <ixx>0.05</ixx>
          <iyy>0.05</iyy>
          <izz>0.05</izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.25</radius>
            <length>0.15</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.25</radius>
            <length>0.15</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1.0</ambient>
          <diffuse>0.1 0.1 0.1 1.0</diffuse>
        </material>
      </visual>
    </link>

    <joint name="front_right_wheel_joint" type="revolute">
      <parent>front_right_steering_hub</parent>
      <child>front_right_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <!-- Rear Left Wheel -->
    <link name="rear_left_wheel">
      <pose relative_to="chassis">-0.6 0.5 0 -1.5708 0 0</pose>

      <inertial>
        <mass>2.0</mass>
        <inertia>
          <ixx>0.05</ixx>
          <iyy>0.05</iyy>
          <izz>0.05</izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.25</radius>
            <length>0.15</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.25</radius>
            <length>0.15</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1.0</ambient>
          <diffuse>0.1 0.1 0.1 1.0</diffuse>
        </material>
      </visual>
    </link>

    <joint name="rear_left_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>rear_left_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <!-- Rear Right Wheel -->
    <link name="rear_right_wheel">
      <pose relative_to="chassis">-0.6 -0.5 0 -1.5708 0 0</pose>

      <inertial>
        <mass>2.0</mass>
        <inertia>
          <ixx>0.05</ixx>
          <iyy>0.05</iyy>
          <izz>0.05</izz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.25</radius>
            <length>0.15</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.25</radius>
            <length>0.15</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1.0</ambient>
          <diffuse>0.1 0.1 0.1 1.0</diffuse>
        </material>
      </visual>
    </link>

    <joint name="rear_right_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>rear_right_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <!-- Ackermann Steering Plugin -->
    <plugin
      filename="gz-sim-ackermann-steering-system"
      name="gz::sim::systems::AckermannSteering">
      <left_joint>rear_left_wheel_joint</left_joint>
      <right_joint>rear_right_wheel_joint</right_joint>
      <left_steering_joint>front_right_steering_joint</left_steering_joint>
      <right_steering_joint>front_left_steering_joint</right_steering_joint>
      <wheel_base>1.2</wheel_base>
      <wheel_separation>1.0</wheel_separation>
      <steering_limit>0.7</steering_limit>
      <wheel_radius>0.25</wheel_radius>
      <min_velocity>-5.0</min_velocity>
      <max_velocity>5.0</max_velocity>
      <min_acceleration>-3.0</min_acceleration>
      <max_acceleration>3.0</max_acceleration>
      <topic>/cmd_vel</topic>
    </plugin>

  </model>
</sdf>
